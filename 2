#include <stdio.h>
#include <string.h>

int indexOf(char text[], char word[]) {
    int textLength = strlen(text);
    int wordLength = strlen(word);

    for (int i = 0; i <= textLength - wordLength; i++) {
        int j;
        for (j = 0; j < wordLength; j++) {
            if (text[i + j] != word[j]) {
                break;
            }
        }
        if (j == wordLength) {
            return i; // Найден индекс
        }
    }
    return -1; // Слово не найдено
}

int main() {
    char sentence[] = "The cat is on the roof";
    char word[] = "cat";
    int index = indexOf(sentence, word);

    if (index != -1) {
        printf("Слово '%s' найдено на индексе: %d\n", word, index);
    } else {
        printf("Слово '%s' не найдено\n", word);
    }

    return 0;
}
